freevar : expr -> name -> type.
%mode freevar +Dexpr -Dname.

freevar/app-1 : freevar (app E1 _) X <- freevar E1 X.
freevar/app-2 : freevar (app _ E2) X <- freevar E2 X.
freevar/lam : freevar (lam X E) Y
  <- freevar E Y
  <- name-diff X Y.
freevar/pi-1 : freevar (pi X E1 E2) Y
  <- freevar E1 Y.
freevar/pi-2 : freevar (pi X E1 E2) Y
  <- freevar E2 Y
  <- name-diff X Y.
% pi X E1 E2
% ty
freevar/var : freevar (var X) X.

%worlds () (freevar _ _).
%total (E) (freevar E _).
